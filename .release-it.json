{
    "git": {
      "commitMessage": "chore: bump version to ${version}",
      "requireBranch": "main"
    },
    "hooks": {
        "before:init": ["npm run lint"]
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "releaseName": "${version}",
      "tokenRef": "GH_PAT"
    }
  }